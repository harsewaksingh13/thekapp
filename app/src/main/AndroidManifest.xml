<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.harsewak.kapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.harsewak.kapp.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.harsewak.kapp.ui.SplashActivity"
            android:clearTaskOnLaunch="true"
            android:theme="@style/AppTheme.NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.harsewak.kapp.ui.login.LoginActivity" />
        <activity android:name="com.harsewak.kapp.ui.main.MainActivity" />
    </application>

</manifest>